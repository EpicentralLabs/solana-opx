              "name": "Call"
            },
            {
              "name": "Put"
            }
          ]
        }
      },
      {
        "name": "OptionStatus",
        "type": {
          "kind": "enum",
          "variants": [
            {
              "name": "Active"
            },
            {
              "name": "Exercised"
            },
            {
              "name": "Expired"
            }
          ]
        }
      }
    ],
    "errors": [
      {
        "code": 6000,
        "name": "InvalidExpiration",
        "msg": "The expiration time is invalid. The option cannot expire in the past."
      },
      {
        "code": 6001,
        "name": "OptionNotActive",
        "msg": "Option is not active."
      },
      {
        "code": 6002,
        "name": "OptionExpired",
        "msg": "Option has expired."
      },
      {
        "code": 6003,
        "name": "UnauthorizedExercise",
        "msg": "Unauthorized attempt to exercise option."
      },
      {
        "code": 6004,
        "name": "OptionNotExpired",
        "msg": "Option has not yet expired."
      }
    ]
