            "isSigner": true
          },
          {
            "name": "systemProgram",
            "isMut": false,
            "isSigner": false
          }
        ],
        "args": [
          {
            "name": "strikePrice",
            "type": "u64"
          },
          {
            "name": "optionType",
            "type": {
              "defined": "OptionType"
            }
          },
          {
            "name": "expiration",
            "type": "i64"
          }
        ]
      },
      {
        "name": "exerciseOption",
        "accounts": [
          {
            "name": "optionAccount",
