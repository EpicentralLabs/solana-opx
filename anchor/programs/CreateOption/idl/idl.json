      {
        "name": "expireOption",
        "accounts": [
          {
            "name": "optionAccount",
            "isMut": true,
            "isSigner": false
          },
          {
            "name": "owner",
            "isMut": true,
            "isSigner": true
          }
        ],
        "args": []
      }
    ],
    "accounts": [
      {
        "name": "OptionState",
        "type": {
          "kind": "struct",
          "fields": [
            {
              "name": "strikePrice",
              "type": "u64"
            },
            {
              "name": "expiration",
              "type": "u64"
            },
            {
              "name": "owner",
              "type": "publicKey"
            },
            {
              "name": "optionType",
              "type": "u8"
            },
            {
              "name": "timestamp",
              "type": "u64"
            },
            {
              "name": "status",
              "type": "u8"
            }
          ]
        }
      }
    ],
    "types": [
      {
        "name": "OptionType",
        "type": {
          "kind": "enum",
